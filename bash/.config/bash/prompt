#!/bin/bash

for file in $(find "${BASH_SOURCE[0]}.d/" -type f);
do
	if [[ -f "$file" ]];
	then
		source "$file"
	fi
done

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi

unset color_prompt force_color_prompt


PROMPT_COMMAND="get_exit_code;cpupercent"
# Define the sexy-bash-prompt
PS1="\n\
â”â”â”â”\[$user_color\] $user_name \[$reset\]\$(get_newl)\
\[$preposition_color\] ğŸ’» \[$reset\]\
\[\$(host_color)\]$host_name \[$reset\]
â”ƒ\[$preposition_color\] ğŸ“‚ \[$reset\]\
\[$dir_color\]\w (\$(get_dirstack_count))\[$reset\]\
\$(get_files)\
\$(get_time)\
\$( is_on_git &&\
  echo -n \"\nâ”ƒ\[$preposition_color\] â›• \[$reset\] \" &&\
  echo -n \"\[$git_status_color\]\$(get_git_info)\" &&\
  echo -n \"\[$git_progress_color\]\$(get_git_progress)\" &&\
  echo -en \"\[$preposition_color\]\")\[$reset\]\$(get_newl)\
\$(get_vgit_changes)\
\$(get_cpupercent)\
\$(get_shellpercent)\
\$(jobs_prompt)\
\$(print_exit_code)
â”—â”\[$symbol_color\]$(get_prompt_symbol) \[$reset\] "
