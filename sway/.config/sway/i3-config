#lock screen, shytdown, hipernate etc...
set $mode_system System (l) lock, (e) logout, (h) hibernate, (r) reboot, (s) shutdown, (i) restart i3, (k) kill focused window, (c) reload i3 config
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r reboot, mode "default"
    bindsym s exec poweroff, mode "default"
    bindsym i restart, mode "default"
    bindsym k kill, mode "default"
    bindsym c reload, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"
mode "Window Management" {
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym SpaceBar mode "default"
        
	# These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

    # switch to workspace
    # Define custom workspace names
    bindsym 0 workspace $wp0 mode "default"
    bindsym 1 workspace $wp1 mode "default"
    bindsym 2 workspace $wp2 mode "default"
    bindsym 3 workspace $wp3 mode "default"
    bindsym 4 workspace $wp4 mode "default"
    bindsym 5 workspace $wp5 mode "default"
    bindsym 6 workspace $wp6 mode "default"
    bindsym 7 workspace $wp7 mode "default"
    bindsym 8 workspace $wp8 mode "default"
    bindsym 9 workspace $wp9 mode "default"
    bindsym q workspace $wpq mode "default"
    bindsym w workspace $wpw mode "default"
    bindsym e workspace $wpe mode "default"
    bindsym r workspace $wpr mode "default"
    bindsym t workspace $wpt mode "default"
    bindsym y workspace $wpy mode "default"
    bindsym u workspace $wpu mode "default"
    bindsym i workspace $wpi mode "default"
    bindsym o workspace $wpo mode "default"
    bindsym p workspace $wpp mode "default"
    # move focused container to workspace
    # Make these names match
    bindsym Shift+0 move container to workspace $wp0 mode "default"
    bindsym Shift+1 move container to workspace $wp1 mode "default"
    bindsym Shift+2 move container to workspace $wp2 mode "default"
    bindsym Shift+3 move container to workspace $wp3 mode "default"
    bindsym Shift+4 move container to workspace $wp4 mode "default"
    bindsym Shift+5 move container to workspace $wp5 mode "default"
    bindsym Shift+6 move container to workspace $wp6 mode "default"
    bindsym Shift+7 move container to workspace $wp7 mode "default"
    bindsym Shift+8 move container to workspace $wp8 mode "default"
    bindsym Shift+9 move container to workspace $wp9 mode "default"
    bindsym Shift+q move container to workspace $wpq mode "default"
    bindsym Shift+w move container to workspace $wpw mode "default"
    bindsym Shift+e move container to workspace $wpe mode "default"
    bindsym Shift+r move container to workspace $wpr mode "default"
    bindsym Shift+t move container to workspace $wpt mode "default"
    bindsym Shift+y move container to workspace $wpy mode "default"
    bindsym Shift+u move container to workspace $wpu mode "default"
    bindsym Shift+i move container to workspace $wpi mode "default"
    bindsym Shift+o move container to workspace $wpo mode "default"
    bindsym Shift+p move container to workspace $wpp mode "default"
}
bindsym $mod+w mode "Window Management"
