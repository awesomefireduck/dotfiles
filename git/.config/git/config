[include]
	path = ~/.config/git/user
[push]
	default = simple

[color "branch"]
	current = 178 bold
	local = 178
	remote = blue
	upstream = red
	plain = white

[color "diff"]
	context = white
	meta = yellow
	frag = magenta
	func = white bold
	old = red
	new = green
	commit = black bold
	whitespace = red reverse
	colorMoved = zebra
	newMoved = green bold
	oldMoved = red bold
	newMovedAlternative = green bold ul italic
	oldMovedAlternative = red bold ul italic

[color "decorate"]
	branch = 178 bold
	remoteBranch = blue bold
	HEAD = magenta bold
	#tag
	#stash

[color "grep"]
	# non-matching text in context lines (when using -A, -B, or -C)
	context = normal
 	# filename prefix (when not using -h)
        filename = normal
 	# function name lines (when using -p)
        function = white bold
 	# line number prefix (when using -n)
        linenumber = normal
 	# matching text in context lines
        matchContext = red dim
 	# matching text in selected lines
        matchSelected = red
 	# non-matching text in selected lines
        selected = white
 	# separators between fields on a line (:, -, and =) and between hunks (--)
	separator = cyan dim

[color "status"]
	header = white
	added = green bold
	changed = 178 bold
	untracked = 243 bold
	branch = 178 bold
	nobranch = red
	unmerged = red bold

[diff]
	mnemonicprefix = true
	compactionHeuristic = true
	tool = vimdiff

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w'

[branch]
	autosetuprebase = always

[grep]
	lineNumber = true

[alias]
	# make e.g. `git git clone [..]` work like `git clone`
	# also works for `git git git git git clone` (and of course other subcommands)
	git = !git

	unstage = reset HEAD --

	# undo last change, via https://megakemp.com/2016/08/25/git-undo/
	undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}} ; }; f"

	# alias HEAD to head
	head = "!find -type f -name HEAD -execdir ln -s '{}' head \\;"

        ##  GIT LOG
	# one line with shorthash, first line and author
	l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=format:
	# no colour version of ls for use in pipes/scripts
	lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
	# adds changecounts of files to each line
	ls  = !git l --numstat
	# ls with relative date
	ll = !git l --date=relative
	# ls with absolute date
	ld = !git l --date=short
	# show logs with diffs for e.g. a file
	lu = log -u

	## DIFF
	# show modified files in last commit
	dl = !git ls -1 --date=relative
	# show diff with the last commit
	dlc = diff --cached HEAD^

	## LIST ALIASES
	alias = !git config -l | grep alias | grep -v '^alias\\.\\(git\\|alias\\|aliases\\)\\b'| sed -r 's/alias.([a-z]+)=(!git )?(.+)/\\1\\t \\3/' | sort -k1,1
	aliases = !git alias

	## GIT STASH
	sl  = stash list
	sa  = stash apply
	# git stash diff
	sd  = stash show -v
	ss  = stash save
	srm = stash drop

	## ASSUME UNCHANGED
	# assume files are unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	# show assumed files
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	# unassume all the assumed files
	unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
	assumeall = "!git status -s | awk {'print $2'} | xargs git assume"

	# List files not in git
	untracked = "!f() { git status -s -uall ${GIT_PREFIX}${1-.} | grep '^??'; }; f"
	ignored = "!f() { git status --short --untracked=all --ignored ${GIT_PREFIX}${1-.} | grep '^!!'; }; f "

	# get details of a commit
	diffr  = "!f() { git diff "$1"^.."$1"; }; f"
	lookup  = "!f() { git ll "$1"^.."$1"; }; f"
